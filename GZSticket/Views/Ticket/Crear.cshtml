@model STICKET.Models.Ticket

@Html.ValidationSummary()

<form class="form-group" method="post" action="@Url.Action("Crear","Ticket")">

    <div class="form-group">
        <label><strong>Asunto</strong></label>
        <input class="form-control" name="Nombre">
    </div>

    <div class="form-group">
        <label><strong>Descripción</strong></label>
        <textarea class="form-control" rows="3" name="Descripcion"></textarea>
    </div>

    <div class="form-group">
        <label><strong>Fecha Ingreso</strong></label>
        <div class="justify-content-center">
            <input type="date" name="Finc">
        </div>
    </div>

    <div class="form-group">
        <label><strong>Fecha Estimación</strong></label>
        <div class="justify-content-center">
            <input type="date" name="Fter">
        </div>
    </div>


    <div class="form-group">
        <label for="LabelSelect"><strong>Estado</strong></label>
        <select class="form-control" name="EstadoId">
            @foreach (var es in ViewBag.Estado)
            {
                <option name="EstadoId" value="@es.Id"> @es.Nombre </option>
            }
            </select>
    </div>

    <div class="form-group">
        <label for="LabelSelect"><strong>Departamento</strong></label>
        <select class="form-control" name="DeptoId">
            @foreach (var dep in ViewBag.Depto)
            {
                <option name="DeptoId" value="@dep.Id"> @dep.Nombre </option>
            }
            </select>
    </div>
    <hr />
    <div class="form-actions">
        <button type="submit" class="btn btn-outline-success">Crear</button>
        <button type="reset" class="btn">Limpiar</button>
    </div>

</form>
