@model IEnumerable<STICKET.Models.Sucursal>
@Html.ValidationSummary()
<table class="table table-striped table-secondary">
    <thead class="thead-dark">
        <tr>
            <th class="font-weight-bold">#</th>
            <th class="font-weight-bold">Nombre</th>
            <th class="font-weight-bold">Dirección</th>
            <th class="font-weight-bold">Comuna</th>
            <th class="font-weight-bold">Opciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var su in Model)
        {
            <tr>
                <td>@su.Id</td>
                <td>@su.Nombre</td>
                <td>@su.Direccion</td>
                <td>@su.Comuna.Nombre</td>
                <td>
                    <a class="nodeco" href="@Url.Action("Ver","Sucursal", new { id = @su.Id })">ver</a>
                    <a class="nodeco" href="@Url.Action("Editar","Sucursal", new { id = @su.Id })">| editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p class="table-result-count">Se han encontrado @Model.Count() resultado(s).</p>
