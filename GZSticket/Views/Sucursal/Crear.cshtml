@model STICKET.Models.Sucursal

@Html.ValidationSummary()

<form class="form-group" method="post" action="@Url.Action("Crear","Sucursal")">
    <div class="form-group">
        <label><strong>Nombre</strong></label>
        <input class="form-control" name="Nombre">
    </div>
    <div class="form-group">
        <label><strong>Direccion</strong></label>
        <textarea class="form-control" rows="3" name="Direccion"></textarea>
    </div>
    <div class="form-group">
        <label for="LabelSelect"><strong>Comuna</strong></label>
        <select class="form-control" name="ComunaId">
            @foreach (var comunas in ViewBag.Comuna)
            {
                <option value="@comunas.Id"> @comunas.Nombre </option>
            }
        </select>
    </div>
    <hr />
    <div class="form-actions">
        <button type="submit" class="btn btn-outline-success">Crear</button>
        <button type="reset" class="btn">Limpiar</button>
    </div>
</form>
